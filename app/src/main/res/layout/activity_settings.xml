<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bb">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_layout" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="107dp"
        android:src="@drawable/default_image" />

    <EditText
        android:id="@+id/settings_user_status"
        android:layout_width="218dp"
        android:layout_height="48dp"
        android:layout_below="@+id/settings_profile_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:gravity="center"
        android:text="User Profile Status"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/settings_username"
        android:layout_width="341dp"
        android:layout_height="70dp"
        android:layout_below="@+id/settings_user_email"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/ic_person"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/settings_user_email"
        android:layout_width="341dp"
        android:layout_height="70dp"
        android:layout_below="@+id/settings_user_status"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/settings_user_password"
        android:layout_width="341dp"
        android:layout_height="70dp"
        android:layout_below="@+id/settings_username"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:drawableLeft="@drawable/ic_security"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" />

    <Button
        android:id="@+id/button_Update"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_user_password"
        android:layout_alignEnd="@+id/settings_user_password"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="75dp"
        android:text="UPDATE" />


</RelativeLayout>